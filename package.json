{
	"name": "root",
	"private": true,
	"engines": {
		"node": ">=18"
	},
	"packageManager": "yarn@3.2.3",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "lerna run build",
		"release": "lerna run release --stream",
		"test": "lerna run test --verbose",
		"wc": "lerna --scope=@welingtonms/xb-wc run",
		"tokens": "lerna --scope=@welingtonms/xb-tokens run",
		"toolset": "lerna --scope=@welingtonms/xb-toolset run",
		"icons": "lerna --scope=@welingtonms/xb-icons run"
	},
	"devDependencies": {
		"@babel/core": "7.21.5",
		"@babel/preset-env": "7.21.5",
		"@babel/preset-typescript": "7.21.5",
		"@commitlint/cli": "17.6.1",
		"@commitlint/config-conventional": "17.6.1",
		"@rollup/plugin-babel": "5.3.1",
		"@rollup/plugin-commonjs": "22.0.2",
		"@rollup/plugin-node-resolve": "14.1.0",
		"@rollup/plugin-typescript": "8.5.0",
		"husky": "8.0.3",
		"lerna": "6.6.1",
		"nx": "16.0.1",
		"prettier": "npm:wp-prettier@latest",
		"rollup": "2.79.1",
		"rollup-plugin-summary": "1.4.3",
		"rollup-plugin-terser": "7.0.2",
		"typescript": "4.9.4"
	}
}
