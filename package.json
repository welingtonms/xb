{
	"name": "root",
	"private": true,
	"engines": {
		"node": ">=16"
	},
	"packageManager": "yarn@3.2.3",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"build": "lerna run --ignore=demo build",
		"release": "lerna run release --stream",
		"test": "lerna run --ignore=demo test",
		"pkg:wc": "lerna --scope=@welingtonms/xb-wc run",
		"pkg:tokens": "lerna --scope=@welingtonms/xb-tokens run",
		"pkg:toolset": "lerna --scope=@welingtonms/xb-toolset run",
		"pkg:icons": "lerna --scope=@welingtonms/xb-icons run"
	},
	"devDependencies": {
		"@babel/core": "7.20.2",
		"@babel/preset-env": "7.20.2",
		"@babel/preset-typescript": "7.18.6",
		"@commitlint/cli": "17.2.0",
		"@commitlint/config-conventional": "17.2.0",
		"@rollup/plugin-babel": "5.3.1",
		"@rollup/plugin-commonjs": "22.0.2",
		"@rollup/plugin-node-resolve": "14.1.0",
		"@rollup/plugin-typescript": "8.5.0",
		"husky": "8.0.2",
		"lerna": "6.0.3",
		"nx": "15.1.1",
		"prettier": "npm:wp-prettier@latest",
		"rollup": "2.79.1",
		"rollup-plugin-summary": "1.4.3",
		"rollup-plugin-terser": "7.0.2",
		"typescript": "4.9.3"
	}
}
