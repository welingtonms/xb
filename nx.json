{
	"extends": "nx/presets/npm.json",
	"affected": {
		"defaultBase": "main"
	},
	"namedInputs": {
		"default": [
			"{projectRoot}/**/*"
		],
		"prod": [
			"!{projectRoot}/**/*.stories.*",
			"!{projectRoot}/**/*.test.*",
			"!{projectRoot}/**/*.cy.*"
		]
	},
	"targetDefaults": {
		"build": {
			"inputs": [
				"prod",
				"^prod"
			],
			"dependsOn": [
				"^build"
			]
		},
		"dev": {
			"dependsOn": [
				"^build"
			]
		},
		"test": {
			"inputs": [
				"default"
			],
			"dependsOn": [
				"^build"
			]
		},
		"release": {
			"inputs": [
				"default",
				"^prod"
			],
			"dependsOn": [
				"^build"
			]
		}
	},
	"tasksRunnerOptions": {
		"default": {
			"runner": "nx/tasks-runners/default",
			"options": {
				"cacheableOperations": [
					"build"
				]
			}
		}
	},
	"pluginsConfig": {
		"@nrwl/js": {
			"analyzeSourceFiles": false
		}
	}
}
